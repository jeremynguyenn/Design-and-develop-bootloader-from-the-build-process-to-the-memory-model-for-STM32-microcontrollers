#include <stdio.h>
#include "stm32f4xx.h"
#include "uart.h"
#include <stdbool.h>
#include <timebase_min.h>
/*Modules:
 * FPU
 * UART
 * TIMEBASE
 * GPIO (BSP)
 * ADC
 * */

#define VECT_TAB_BASE_ADDRESS		FLASH_BASE
#define VECT_TAB_OFFSET				0x8000

#define  GPIOAEN		(1U<<0)
#define  PIN5			(1U<<5)
#define  LED_PIN		PIN5

bool btn_state;

struct btl_common_apis
{
	void(*led_init)(void);
	void(*led_toggle)(uint32_t dly);
	void(*led_on)(void);
	void(*led_off)(void);
	void(*debug_uart_init)(void);
	void(*button_init)(void);
	bool(*get_btn_state)(void);
	void(*fpu_enable)(void);
	void(*timebase_init)(void);

};

int main()
{

	struct btl_common_apis *common_apis = (struct btl_common_apis *)0x0800C000;

	/*Enable FPU*/
	common_apis->fpu_enable();

	/*Initialize debug UART*/
	common_apis->debug_uart_init();

	/*Initialize timebase*/
	common_apis->timebase_init();

	/*Initialize LED*/
	common_apis->led_init();

	/*Initialize Push button*/

	common_apis->button_init();
	while(1)
	{
		printf("Application version (2) is running....\n\r");
	}
}

void SystemInit(void)
{
	SCB->VTOR = VECT_TAB_BASE_ADDRESS | VECT_TAB_OFFSET;
}
